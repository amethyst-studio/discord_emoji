{
  "name": "discord-emoji",
  "description": "Near exact emoji name tables for Discord. Allows programmatically including emojis instead of copying an escaped version.",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Samuel Voeller <samuel.voeller@mxsrv.amethyst.live> (https://invite-to.amethyst.live)",
  "contributors": [],
  "homepage": "https://github.com/amethyst-studio/discord-emoji",
  "repository": {
    "url": "git@github.com/amethyst-studio/discord-emoji.git"
  },
  "engines": {
    "node": ">=16.7.0",
    "npm": ">=7.22.0"
  },
  "engineStrict": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["/dist/", "/package.json", "/README.md", "/LICENSE.md"],
  "scripts": {
    "prepare": "husky install",
    "prepack": "npm run build:production",
    "format": "eslint .",
    "test": "mocha './tests/**/*.js'",
    "build": "npx tsc --build && npm run test",
    "upgrade": "npx npm-check-updates -u --target latest --peer && wget https://www.toptal.com/developers/gitignore/api/node,yarn,webstorm+all,visualstudiocode,visualstudio -O ./origin.gitignore && echo '' > .gitignore && echo '# MANAGED FILE: PLEASE MAKE MODIFICATIONS TO ./user.gitignore' >> .gitignore && cat ./user.gitignore >> .gitignore && cat ./origin.gitignore >> .gitignore",
    "docs": "typedoc --out ./docs/ ./lib/"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/js-beautify": "^1.13.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "chai": "^4.3.4",
    "del": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.2",
    "js-beautify": "^1.14.0",
    "mocha": "^9.1.1",
    "typedoc": "^0.22.3",
    "typescript": "^4.4.3",
    "website-scraper": "^4.2.3"
  },
  "root": true
}
